<h1>Мои заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s12">
                <div class="cart">
                    <div class="cart-content">
                        <h3 class="cart-title">Заказ # {{_id}}</h3>
                        <p class="date">{{date}}</p>
                        <p><em><b>{{user.name}}</b></em> ({{user.userId.email}})</p>
                    </div>

                        <ol class="order-twr" >
                            {{#each courses}}
                                <li>{{course.title}}
                                    {{course.price}}
                                    (x<strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>

                    <p>Товаров: {{totalCount}}</p>
                    <p>На сумму: <span class="price">{{totalPrice}}</span></p>
                    <br>
                    <hr />
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет</p>
{{/if}}